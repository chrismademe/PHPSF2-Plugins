{% if cms.posts %}
    <article id="post-{{ post.ID }}">
        <div class="image">
            <img src="/{{ post.cover_image }}">
        </div>
        <div class="content">
            <h2>{{ post.title }}</h2>
            <p>{{ post.snippet }}</p>
            <p><a class="button" href="/blog/{{ post.ID }}">Read more</a></p>
        </div>
    </article>
{% else %}
    <p>There are no posts to display.</p>
{% endif %}
